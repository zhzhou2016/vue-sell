body, html
  line-height 1
  font-weight 200
  font-family 'PingFang SC', 'STHeitiSC-light', 'Helvetica-light'
@media (-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
  .border-1px
    &::after
      -webkit-transform scaleY(0.7)
      transform scaleY(0.7)
@media (-min-device-pixel-ratio: 2.0),(min-device-pixel-ratio: 2.0)
  .border-1px
    &::after
      -webkit-transform scaleY(0.5)
      transform scaleY(0.5)

.clearfix
  display inline-block
  &:after
    display block
    content "."
    height 0
    line-height 0
    clear both
